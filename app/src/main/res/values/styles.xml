<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <!-- Style untuk Background Layout Utama -->
    <style name="MainLayoutBackground">
        <item name="android:background">#F0F8FF</item> <!-- Warna latar belakang utama -->
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style untuk EditText -->
    <style name="EditTextStyle">
        <item name="android:backgroundTint">@color/color3rd</item> <!-- Hijau untuk garis bawah -->
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style untuk TextView sebagai input pilihan -->
    <style name="TextViewChoiceStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#4CAF50</item> <!-- Warna hijau hint -->
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Style untuk Tombol -->
    <style name="ButtonStyle">
        <item name="android:background">@color/color4th</item> <!-- Warna oranye -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style untuk ListView -->
    <style name="ListViewStyle">
        <item name="android:divider">#E0E0E0</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CustomDatePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Warna latar belakang dialog -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/softBlue</item>
    </style>

    <!-- Style untuk Rounded Corner -->
    <style name="RoundedDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppTemaDialog" parent="Theme.Material3.Light.Dialog.Alert">
        <!-- Warna latar belakang sesuai dengan ColorAccent -->
        <item name="colorSurface">@color/white</item>
        <!-- Warna teks utama (putih) -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorAccent</item>

        <!-- Efek ujung yang bulat -->
        <item name="shapeAppearanceSmallComponent">@style/RoundedDialog</item>
    </style>





</resources>
