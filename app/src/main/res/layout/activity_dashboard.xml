<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true">
<include
    layout="@layout/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Selamat Datang,"
                android:textSize="18sp"
                android:paddingStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan pilih kategori menu:"
                android:textSize="20sp"
                android:paddingStart="16dp"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:columnCount="1"
            android:rowCount="2">

            <ImageView
                android:id="@+id/ivBalita"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/baby"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnBalita"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_base"
                android:text="Balita"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ivElder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/elder"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnLansia"

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_base"
                android:text="Lansia"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/ivMom"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_mom"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnBumil"

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_base"
                android:text="Bumil"
                android:textColor="@color/white" />

        </GridLayout>
    </LinearLayout>
<include
    layout="@layout/footer_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    />



</LinearLayout>
