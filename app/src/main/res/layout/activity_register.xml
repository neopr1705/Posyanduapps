<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp"
        android:gravity="center"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/str_Daftar"
            android:textAllCaps="true"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/exitbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_24dp_e8eaed_fill0_wght400_grad0_opsz24"
            android:tint="@color/black" />
    </LinearLayout>


    <!-- Content -->
    <ScrollView
        android:id="@+id/RegisterContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.6"
        app:layout_constraintTop_toBottomOf="@+id/header_daftar"
        app:layout_constraintBottom_toTopOf="@+id/bottomRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Input Username -->
           <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Username"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- Input Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp" />
            <!-- Input Nama Lengkap -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nama Lengkap"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- Input Alamat Lengkap -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat Lengkap"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAlamatLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Alamat Lengkap"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp" />

            <!-- Input Tanggal Lahir -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/etTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:hint="Masukkan Tanggal Lahir"
                android:inputType="date"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@drawable/underline"
                android:layout_marginBottom="16dp"/>

            <!-- Pilihan Status Kehamilan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usia Kehamilan"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/etUsiaKehamilan"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:inputType="number"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textAllCaps="true"
                    android:text="minggu" />
            </LinearLayout>

            <!-- Input Nomor HP -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor HP"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNomorHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Nomor HP"
                android:inputType="phone"
                android:layout_marginBottom="16dp" />

            <!-- Tombol Daftar -->
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_base"
                android:text="Daftar"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottomRegister"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/RegisterContent"/>
</androidx.constraintlayout.widget.ConstraintLayout>