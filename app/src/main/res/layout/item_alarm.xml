<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tvTitleNamaAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"/>
         <!-- Nama Alarm -->
        <TextView
            android:id="@+id/tvNamaAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="asddasdasd"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/tvTitleTanggalAlarm"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Tanggal :"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"/>
        <!-- Tanggal Alarm -->
        <TextView
            android:id="@+id/tvTanggalAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textSize="12sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/tvTitleHariAlarm"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Hari :"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"/>
        <!-- Hari Alarm -->
        <TextView
            android:id="@+id/tvHariAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/tvTitleJamAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam :"

            android:textColor="@color/black"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"/>
        <!-- Jam Alarm -->
        <TextView
            android:id="@+id/tvJamAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/black"
            android:layout_marginBottom="4dp"
            android:text=""
            android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/tvTitleTempatAlarm"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Tempat :"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"/>
        <!-- Tempat Alarm -->
        <TextView
            android:id="@+id/tvTempatAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            android:text=""
            android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- Switch untuk mengaktifkan alarm -->
    <LinearLayout
        android:id="@+id/HolderSwitch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Switch
            android:id="@+id/swAktif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>
