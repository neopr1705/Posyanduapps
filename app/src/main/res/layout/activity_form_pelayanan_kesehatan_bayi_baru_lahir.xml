<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <include
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_Menu" />

    <!-- Konten dengan ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- KN1 Section -->
            <TextView
                android:id="@+id/tvKN1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KN1 (6-48 jam)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/llKN1Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamic EditTexts for KN1 -->
            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">
            <Button
                android:id="@+id/btnAddKN1Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Input KN1"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_base"/>
            <Button
                android:id="@+id/btnRmKN1Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus Semua Input KN1"
                android:textColor="@color/white"
                android:background="@drawable/button_selected"/>
</LinearLayout>
            <!-- KN2 Section -->
            <TextView
                android:id="@+id/tvKN2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KN2 (3-7 hari)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/llKN2Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamic EditTexts for KN2 -->
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAddKN2Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Input KN2"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:background="@drawable/button_base"/>
            <Button
                android:id="@+id/btnRmKN2Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus Semua input KN2"
                android:textColor="@color/white"
                android:background="@drawable/button_selected"/>
        </LinearLayout>
            <!-- KN3 Section -->
            <TextView
                android:id="@+id/tvKN3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KN3 (8-28 hari)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/llKN3Container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Dynamic EditTexts for KN3 -->
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAddKN3Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Input KN3"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:background="@drawable/button_base"/>

            <Button
                android:id="@+id/btnRmKN3Field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus Semua Input KN3"
                android:textColor="@color/white"
                android:background="@drawable/button_selected"/>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- Tombol Save -->
    <Button
        android:id="@+id/btnHapusSemua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_selected"
        android:padding="10dp"
        android:text="Hapus Semua Data"
        android:textColor="@android:color/white" />
    <!-- Tombol Save -->
    <Button
        android:id="@+id/btnSaveBayiLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_base"
        android:padding="10dp"
        android:text="Simpan Data"
        android:textColor="@android:color/white" />
</LinearLayout>
