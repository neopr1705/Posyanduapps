<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <include
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_Menu"/>

    <TextView
        android:id="@+id/tvBayiBaruLahirTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayi Baru Lahir / Neonatus"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:padding="16dp"/>

    <!-- CheckBox for Neonatal Care -->
    <CheckBox
        android:id="@+id/cbCatatPelayananNeonatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastikan pelayanan kesehatan neonatus dicatatkan di bagian anak"/>

    <!-- Spacer to push the button down -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveBayiLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_base"
        android:padding="10dp"
        android:text="Simpan Data"
        android:textColor="@android:color/white" />
</LinearLayout>
