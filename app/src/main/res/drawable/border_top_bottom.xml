<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Garis atas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke
                android:width="7.5px"
                android:color="@color/white" />
        </shape>
    </item>

    <!-- Garis bawah -->
    <item android:top="1dp" android:bottom="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <stroke
                android:width="15px"
                android:color="@color/white" />
        </shape>
    </item>

</layer-list>
